{
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "~/*": ["./*"],
      "@/*": ["./src/*"],
      "@/public/*": ["./public/*"]
    },
    "outDir": "./dist",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowJs": true,
    "skipLibCheck": true,
  },
  "exclude": [
    "./node_modules/**/*",
    "./dist/**/*",
    "./examples/**/*",
  ]
}