{
  "compilerOptions": {
    "strict": true,
    "target": "ESNext",
    "lib": ["ESNext"],
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "resolveJsonModule": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "types": ["node", "vite/client"],
    "paths": {
      "~/*": ["./*"],
      "@/*": ["./src/*"],
      "@/public/*": ["./public/*"]
    },
    "outDir": "./dist",
    "allowJs": true,
  },
  "exclude": [
    "./node_modules/**/*",
    "./dist/**/*",
    "./examples/**/*",
  ]
}